<p style="color: green"><%= notice %></p>

<%= link_to "New shortened url", "/" %>

<h1>Shortened urls</h1>

<div id="shortened_urls">
  <% @shortened_urls.each do |shortened_url| %>
    <%= render shortened_url %>
    <p>
      <%= link_to "Show this shortened url", shortened_url.short_url %>
    </p>
  <% end %>
</div>


